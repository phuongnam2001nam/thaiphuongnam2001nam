            var zz = 0;

            function nextSong() {
                var lapvong = 0;
                var laplai = 0;
                if (arr[zz] == undefined && laplai == 0) {
                    //alert(arrPlaylist[zz]);
                    phatnhac(arrPlaylist[zz]);

                    playlistt(arrPlaylist[zz]);
                } else {
                    if (arr[zz] == undefined) zz = 0;
                    phatnhac(arr[zz]);
                    //playlistt(arr[zz]);

                }
                //alert(zz);
                zz++;
                if (zz == songObj.length) zz = 0;

                // if(arr[zz]==undefined) 
                //phatnhac(zz);

            }

            function previousSong() {
                //if(zz==2) zz=1;
                zz -= 2;
                if (zz < 0) zz = 0;
                //if (zz == 3) zz -= 1;
                if (arr[zz] == undefined) phatnhac(zz);
                else phatnhac(arr[zz]);


            }
            playlistSong = document.getElementsByClassName("playlistSong");
            playlistSongImg = document.getElementsByClassName("playlistSongImg");
            playlistSongName = document.getElementsByClassName("playlistSongName");
            playlistSongArtist = document.getElementsByClassName("playlistSongArtist");

            function playlistt(current) {

                for (var i = 0; i < arrPlaylist.length; i++) {

                    playlistSongImg[i].src = songObj[arrPlaylist[i]].pic;
                    playlistSongName[i].innerHTML = songObj[arrPlaylist[i]].nameSong;
                    for (var j = 0; j < artistObj.length; j++) {
                        if (artistObj[j].id == songObj[arrPlaylist[i]].id) {
                            playlistSongArtist[i].innerHTML = artistObj[j].name;
                            break;
                        }
                    }
                }

                for (var i = 0; i < arrPlaylist.length; i++) {
                    playlistSong[i].style.backgroundColor = "";
                    playlistSong[i].style.color = "";
                }
                //alert(songObj[current].nameSong);
                for (var i = 0; i < arrPlaylist.length; i++) {

                    if (songObj[current].nameSong == playlistSongName[i].innerHTML) {
                        //alert(songObj[current].nameSong);

                        playlistSong[i].style.color = "crimson";
                        playlistSong[i].style.backgroundColor = "gainsboro";
                    }

                }

            }

            function clickPlaylist(current) {
                for (var i = 0; i < arrPlaylist.length; i++) {
                    playlistSong[i].style.backgroundColor = "";
                    playlistSong[i].style.color = "";
                }
                //alert(songObj[current].nameSong);
                for (var i = 0; i < arrPlaylist.length; i++) {

                    if (songObj[current].nameSong == playlistSongName[i].innerHTML) {
                        //alert(songObj[current].nameSong);

                        playlistSong[i].style.color = "crimson";
                        playlistSong[i].style.backgroundColor = "gainsboro";
                    }

                }
                zz = current;
                nextSong();
            }


            var centerSlide = document.getElementsByClassName("centerSlide");
            var text = document.getElementsByClassName("textSlide");
            var rightSlide = document.getElementsByClassName("rightSlide");
            var rightSlideNameSong = document.getElementsByClassName("rightSlideNameSong");
            var rightSlideNameArtist = document.getElementsByClassName("rightSlideNameArtist");
            for (var i = 0; i < centerSlide.length; i++) {
                centerSlide[i].src = songObj[i].slide;
                text[i].innerHTML = songObj[i].nameSong;
                rightSlideNameSong[i].innerHTML = songObj[i].nameSong;
                rightSlide[i].src = songObj[i].slide;
                for (var j = 0; j < artistObj.length; j++) {
                    if (songObj[i].id == artistObj[j].id)
                        rightSlideNameArtist[i].innerHTML = artistObj[j].name;
                }
            }

            //-------------------------------------------------------------------------------
            var artistName = document.getElementsByClassName("artistName");
            var artistPic = document.getElementsByClassName("artistPic");
            var artist = document.getElementsByClassName("artist");
            var follower = document.getElementsByClassName("info-artist");
            var listsong = document.getElementsByClassName("listsong");
            for (var i = 0; i < artistName.length; i++) {
                artistName[i].innerHTML = artistObj[i].name;
                artist[i].id = artistObj[i].id;
                artistPic[i].src = artistObj[i].pic;
                //So luong follower
                if (artistObj[i].follow > 1000000)
                    follower[i].innerHTML = (artistObj[i].follow / 1000000).toFixed(2) + " milion Followers";
                else if (artistObj[i].follow > 1000)
                    follower[i].innerHTML = (artistObj[i].follow / 1000).toFixed(2) + "k Followers";
                else follower[i].innerHTML = (artistObj[i].follow) + " Followers";
                //So luong follower
            }
            openMain(event,'Home');
        </script>

        <script>
            var audio_player = $("#audio-player");
            var play_button = $('#play');
            var progress_bar = $("#progressbar");
            var time = $("#time");
            var mute_button = $('#mute');
            var volume_bar = $('#volume');
            //var more_info = $('#more-info-box');
            //var info_tray = $("#info-tray");
            var player = document.getElementById('player');
            var duration = 0;
            var volume = 0.75;

            document.getElementById('play').click();
            player.onloadedmetadata = function () {
                duration = player.duration;
                document.getElementById('end-time').innerHTML = getTime(parseInt(duration));

                progress_bar.progressbar("option", {
                    'max': duration
                });
            };
            player.load();
            player.volume = 0.75;
            player.addEventListener("timeupdate", function () {
                progress_bar.progressbar('value', player.currentTime);
                time.text(getTime(player.currentTime));
                if (player.currentTime == player.duration) nextSong();

                //if( player.currentTime=0) document.getElementById('play').click();
            }, false);

            function getTime(t) {
                var m = ~~(t / 60),
                    s = ~~(t % 60);
                return (m < 10 ? "0" + m : m) + ':' + (s < 10 ? "0" + s : s);
            }



            function getProgressBarClickInfo(progress_bar, e) {
                var offset = progress_bar.position();
                var x = e.pageX - offset.left; // or e.offsetX (less support, though)
                var y = e.pageY - offset.top; // or e.offsetY
                var max = progress_bar.progressbar("option", "max");
                var value = x * max / progress_bar.width();

                return {
                    x: x,
                    y: y,
                    max: max,
                    value: value
                };
            }

            volume_bar.progressbar({
                value: player.volume * 100,
            });

            volume_bar.click(function (e) {
                var info = getProgressBarClickInfo($(this), e);
                volume_bar.progressbar('value', info.value);
                player.volume = info.value / info.max;
            });

            progress_bar.progressbar({
                value: player.currentTime,
            });

            progress_bar.click(function (e) {
                var info = getProgressBarClickInfo($(this), e);
                player.currentTime = player.duration / info.max * info.value;
            });

            play_button.click(function () {
                player[player.paused ? 'play' : 'pause']();
                $(this).toggleClass("fa-play", player.paused);
                $(this).toggleClass("fa-pause", !player.paused);
            });

            mute_button.click(function () {
                if (player.volume == 0) {
                    player.volume = volume;
                } else {
                    volume = player.volume;
                    player.volume = 0;
                }

                volume_bar.progressbar('value', player.volume * 100);

                $(this).toggleClass("fa-volume-up", player.volume != 0);
                $(this).toggleClass("fa-volume-off", player.volume == 0);
            });

            window.onload = function () {
                document.getElementById("play").click();
            };
            $(document).ready(function () {
                $('#play').trigger('click');
            });

            //track.innerHTML=songObj[site].nameSong;
        </script>
        <script>
            var textHighlightOn = true,
                btnToggle = document.getElementById('toggleTxt'),
                textDiv = document.querySelector('.text-highlight')
            spns = document.getElementsByClassName('aa');
            audi = document.getElementById("player");

            audi.addEventListener("timeupdate", f1);

            function f1() {

                // remove all previous actives;
                [].forEach.call(spns, function (e) {
                    e.classList.remove('activeLyric');
                    //e.classList.remove('active-prev');
                });


                for (var i = 0; i < spns.length; i++) {



                    var time1 = Number(spns[i].id.slice(2));
                    if (time1 < audi.currentTime) {

                        if (i > 0) {

                            spns[i - 1].classList.remove('activeLyric');
                            //spns[i-1].classList.add('active-prev');

                        }

                        spns[i].classList.add('activeLyric');

                    }

                }
            }


            // listen for clicks on the spans.
            [].forEach.call(spns, function (spn) {

                spn.addEventListener("click", function () {

                    for (var i in spns) {



                    }

                    var time1 = Number(this.id.slice(2));
                    audi.currentTime = time1;

                });

            });

            // Toggle text highlight
            btnToggle.addEventListener("click", function () {

                if (textHighlightOn) {
                    textDiv.classList.add('off');
                } else {
                    textDiv.classList.remove('off');
                }

                this.innerHTML = 'Highlight ' + (textHighlightOn ? 'off ' : ' on');

                textHighlightOn = !textHighlightOn;

            });
        </script>
        <script>
            function openMusic3(label) {

                var textSlide = document.getElementsByClassName("textSlide");
                for (var i = 0; i < songObj.length; i++) {
                    if (textSlide[label].innerHTML == songObj[i].nameSong) {
                        phatnhac(i);
                        break;
                    }


                }

            }
        </script>


